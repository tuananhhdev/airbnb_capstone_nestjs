# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/airbnb_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Application Configuration
PORT=3000
NODE_ENV="development"

# CORS Configuration (optional)
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# Rate Limiting (optional)
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# File Upload Limits (optional)
MAX_FILE_SIZE=5242880
MAX_FILES_PER_REQUEST=5

# Pagination Defaults (optional)
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Email Configuration (if needed for future features)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Redis Configuration (if needed for caching)
# REDIS_URL="redis://localhost:6379"

# Logging Configuration
LOG_LEVEL="debug"

# Security
BCRYPT_ROUNDS=10
